{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Cucumber + Playwright",
      "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": [
        "--require",
        "src/steps/*.js",
        "--require",
        "src/support/*.js",
        "features/**/*.feature"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "runtimeArgs": ["--inspect-brk"],
      "autoAttachChildProcesses": true
    }
  ]
}
